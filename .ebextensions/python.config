container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
    leader_only: true
  02_createcachetable:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createcachetable"
    leader_only: true
    ignoreErrors: true
  03_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput"

files:
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/01-wdb.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/app/current/wdb/